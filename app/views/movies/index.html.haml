-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info
      %th= link_to "Release Date", movies_path(:sort => "release_date" ), :id => "release_date_header", :class => ("hilite" if @sorted_by_release_date)
  %tbody
    - @movies.each do |movie|
      %tr
        %th= link_to "Movie Title", movies_path(:sort => "title"), :id => "title_header", :class => ("hilite" if @sorted_by_title)
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
